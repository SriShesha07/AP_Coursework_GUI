<Window x:Class="AP_Coursework_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AP_Coursework_GUI"
        mc:Ignorable="d"
        Title="Expression Interpreter" Height="600" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_Help" Click="HelpMenu_Click"/>
        </Menu>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10,5,10,0" VerticalAlignment="Top">
            <TextBlock Text="Enter expression or definitions (last line is y(x)):"  FontWeight="Bold"/>
            <TextBox Name="InputTextBox" Height="80" FontSize="14" AcceptsReturn="True" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center" >
                <Button Content="Evaluate" Width="90" Margin="0,0,10,0" Click="Evaluate_Click"/>
                <TextBlock Text="Xmin:" VerticalAlignment="Center"/>
                <TextBox Name="XMinBox" Width="80" Margin="4,0,10,0" Text="-10"/>
                <TextBlock Text="Xmax:" VerticalAlignment="Center"/>
                <TextBox Name="XMaxBox" Width="80" Margin="4,0,10,0" Text="10"/>
                <TextBlock Text="Step:" VerticalAlignment="Center"/>
                <TextBox Name="StepBox" Width="80" Margin="4,0,10,0" Text="0.5"/>
                <Button Content="Plot" Width="90" Click="Plot_Click"/>
            </StackPanel>

            <TextBlock Text="Result:" FontWeight="Bold" Margin="0,8,0,0"/>
            <TextBox Name="ResultTextBox" Height="30" IsReadOnly="True" FontSize="14" />

            <TextBlock Text="Errors:" FontWeight="Bold" Margin="0,8,0,0"/>
            <TextBox Name="ErrorBox" Height="50" FontSize="13" IsReadOnly="True" TextWrapping="Wrap"/>
        </StackPanel>

        <Border Grid.Row="2" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <Canvas Name="PlotCanvas" Background="White" />
        </Border>
    </Grid>
</Window>
